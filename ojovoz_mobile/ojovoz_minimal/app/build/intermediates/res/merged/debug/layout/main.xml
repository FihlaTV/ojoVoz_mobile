<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/textLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/omLocationStr"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/omTextColor" />


    <Button
        android:id="@+id/omPhotoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="startCamera"
        android:text="@string/omPhotoButtonText"
        android:textSize="20dp"
        android:background="@drawable/button_background"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/omThumb"
        android:layout_width="267dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.47"
        android:src="@drawable/omBlank"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>


    <Button
        android:id="@+id/omVoiceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="showRecorder"
        android:text="@string/omSoundButtonText"
        android:textSize="20dp"
        android:background="@drawable/button_background"
        android:textColor="@color/black"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"/>


    <TextView
        android:id="@+id/textSoundRecorded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/omEmpty"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/omTextColor" />

    <Button
        android:id="@+id/omTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/omChooseTagText"
        android:textSize="16dp"
        android:background="@drawable/button_background"
        android:textColor="@color/black"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"/>

    <EditText
        android:id="@+id/omNewTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:visibility="invisible"
        android:background="@color/lightblue"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/omSaveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="saveMessage"
        android:text="@string/omSaveButtonText"
        android:textSize="20dp"
        android:visibility="invisible"
        android:background="@drawable/button_background"
        android:textColor="@color/black"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"/>

</LinearLayout>